{% extends "_layouts/cp" %}

{% do view.registerTranslations('translations-admin', [
    "Saving",
    "Save",
    "translations",
    "Translations saved",
    "Translations not saved",
    "Translation added",
    "Translation not added",
    "Translation deleted",
    "Translation not deleted",
    "Add",
    "Delete",
    "Key",
    "Actions",
    "Message",
    "No results",
    "All",
    "Empty",
]) %}

{% block actionButton %}
    <save-translations></save-translations>
{% endblock %}

{% block sidebar %}
    {% if categories|length > 1 %}
        <translations-menu :categories="{{ categories | json_encode }}" category="{{ category }}"></translations-menu>
    {% endif %}
{% endblock %}

{% block content %}
    <translations-list current-category="{{ category }}"></translations-list>
{% endblock %}

{% block footer %}
    <translations-footer></translations-footer>
{% endblock %}

{% block foot %}
    <script>
    window.csrfTokenName = "{{ craft.app.config.general.csrfTokenName|e('js') }}";
    window.csrfTokenValue = "{{ craft.app.request.csrfToken|e('js') }}";
    </script>
{% endblock %}
